{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "include": ["lib/**/*.ts"],

  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",

    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
